---
// src/pages/admin/usuarios.astro
import AuthGuard from "../../components/AuthGuard.astro";
import "../../styles/usuarios.css";
---

<AuthGuard />

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Gesti√≥n de Usuarios - Sistema Canchas</title>
    </head>
    <body>
        <div class="header">
            <canvas id="particles-canvas"></canvas>
            <h1>Gesti√≥n de Usuarios</h1>
            <p>Administraci√≥n de usuarios por empresa</p>
        </div>

        <div class="container">
            <!-- Informaci√≥n del usuario actual -->
            <div class="user-info">
                <div class="user-details">
                    <span class="user-name" id="current-user-name"
                        >Cargando...</span
                    >
                    <span class="user-role" id="current-user-role"
                        >Verificando permisos...</span
                    >
                </div>
                <div>
                    <a href="/" class="btn btn-secondary">‚Üê Volver al Sistema</a
                    >
                    <button id="btn-logout" class="btn btn-danger"
                        >Cerrar Sesi√≥n</button
                    >
                </div>
            </div>

            <!-- Mensaje container -->
            <div id="message-container"></div>

            <!-- Controles -->
            <div class="controls">
                <h3>Gesti√≥n de Usuarios</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label for="filtro-empresa">Filtrar por Empresa:</label>
                        <select id="filtro-empresa" class="form-control">
                            <option value="">Todas las empresas</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="filtro-estado">Estado:</label>
                        <select id="filtro-estado" class="form-control">
                            <option value="">Todos los estados</option>
                            <option value="true">Activos</option>
                            <option value="false">Inactivos</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <button id="btn-nuevo-usuario" class="btn btn-success"
                            >+ Nuevo Usuario</button
                        >
                    </div>
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <button id="btn-actualizar" class="btn btn-primary"
                            >üîÑ Actualizar</button
                        >
                    </div>
                </div>
            </div>

            <!-- Tabla de usuarios -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Empresa</th>
                            <th>Rol</th>
                            <th>Email</th>
                            <th>Estado</th>
                            <th>Fecha Creaci√≥n</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="usuarios-tbody">
                        <tr>
                            <td colspan="7" class="loading"
                                >Cargando usuarios...</td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Modal para crear/editar usuario -->
        <div id="usuario-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="modal-title">Crear Usuario</h3>
                    <button class="close-btn">√ó</button>
                </div>

                <form id="form-usuario">
                    <div class="form-group">
                        <label for="nombre-completo">Nombre Completo *</label>
                        <input
                            type="text"
                            id="nombre-completo"
                            class="form-control"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="empresa-select">Empresa *</label>
                        <select
                            id="empresa-select"
                            class="form-control"
                            required
                        >
                            <option value="">Seleccione una empresa...</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="rol-select">Rol *</label>
                        <select
                            id="rol-select"
                            class="form-control"
                            required
                            disabled
                        >
                            <option value=""
                                >Primero seleccione una empresa</option
                            >
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="activo-check">
                            <input type="checkbox" id="activo-check" checked /> Usuario
                            Activo
                        </label>
                    </div>

                    <div class="form-actions">
                        <button
                            type="button"
                            class="btn btn-secondary close-modal"
                            >Cancelar</button
                        >
                        <button type="submit" class="btn btn-success"
                            >Guardar Usuario</button
                        >
                    </div>
                </form>
            </div>
        </div>

        <script>
            import { UsuarioManager } from "../../utils/UsuarioManager";

            // ========== ANIMACI√ìN DE PART√çCULAS EN HEADER ==========
            function initParticles() {
                const canvas = document.getElementById("particles-canvas");
                if (!canvas) return;

                const ctx = canvas.getContext("2d");
                const header = canvas.parentElement;

                let width, height;

                // Ajustar tama√±o del canvas
                function resizeCanvas() {
                    width = header.offsetWidth;
                    height = header.offsetHeight;
                    canvas.width = width;
                    canvas.height = height;
                }

                resizeCanvas();

                // Configuraci√≥n de part√≠culas
                let particles = [];
                const particleDensity = 9000; // Menor n√∫mero = m√°s part√≠culas

                // Mouse interaction
                let mouse = { x: null, y: null, radius: 150 };

                header.addEventListener("mousemove", (event) => {
                    const rect = header.getBoundingClientRect();
                    mouse.x = event.clientX - rect.left;
                    mouse.y = event.clientY - rect.top;
                });

                header.addEventListener("mouseleave", () => {
                    mouse.x = null;
                    mouse.y = null;
                });

                class Particle {
                    constructor() {
                        this.x = Math.random() * width;
                        this.y = Math.random() * height;
                        this.size = Math.random() * 2 + 1.5; // Tama√±o variado
                        this.speedX = (Math.random() * 1.5 - 0.75) * 0.5; // Velocidad lenta y elegante
                        this.speedY = (Math.random() * 1.5 - 0.75) * 0.5;
                        this.density = Math.random() * 30 + 1;
                    }

                    update() {
                        // Movimiento normal
                        this.x += this.speedX;
                        this.y += this.speedY;

                        // Rebote en bordes
                        if (this.x > width || this.x < 0)
                            this.speedX = -this.speedX;
                        if (this.y > height || this.y < 0)
                            this.speedY = -this.speedY;

                        // Interacci√≥n con mouse
                        if (mouse.x != null) {
                            let dx = mouse.x - this.x;
                            let dy = mouse.y - this.y;
                            let distance = Math.sqrt(dx * dx + dy * dy);

                            if (distance < mouse.radius) {
                                const forceDirectionX = dx / distance;
                                const forceDirectionY = dy / distance;
                                const maxDistance = mouse.radius;
                                const force =
                                    (maxDistance - distance) / maxDistance;
                                const directionX =
                                    forceDirectionX * force * this.density;
                                const directionY =
                                    forceDirectionY * force * this.density;

                                // Efecto de repulsi√≥n suave
                                this.x -= directionX * 0.05;
                                this.y -= directionY * 0.05;
                            }
                        }
                    }

                    draw() {
                        ctx.beginPath();
                        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                        ctx.fillStyle = "rgba(255, 255, 255, 0.7)"; // Part√≠culas claras
                        ctx.fill();
                    }
                }

                function init() {
                    particles = [];
                    let numberOfParticles = (width * height) / particleDensity;
                    // Asegurar un m√≠nimo de part√≠culas
                    if (numberOfParticles < 50) numberOfParticles = 50;
                    if (numberOfParticles > 150) numberOfParticles = 150; // L√≠mite superior

                    for (let i = 0; i < numberOfParticles; i++) {
                        particles.push(new Particle());
                    }
                }

                init();

                window.addEventListener("resize", () => {
                    resizeCanvas();
                    init();
                });

                // Animar
                function animate() {
                    ctx.clearRect(0, 0, width, height);

                    particles.forEach((particle) => {
                        particle.update();
                        particle.draw();
                    });

                    connect();

                    requestAnimationFrame(animate);
                }

                function connect() {
                    const maxDistance = 130; // Distancia de conexi√≥n
                    for (let a = 0; a < particles.length; a++) {
                        for (let b = a; b < particles.length; b++) {
                            let dx = particles[a].x - particles[b].x;
                            let dy = particles[a].y - particles[b].y;
                            let distance = Math.sqrt(dx * dx + dy * dy);

                            if (distance < maxDistance) {
                                let opacityValue = 1 - distance / maxDistance;
                                ctx.strokeStyle =
                                    "rgba(255, 255, 255," +
                                    opacityValue * 0.35 +
                                    ")";
                                ctx.lineWidth = 0.8;
                                ctx.beginPath();
                                ctx.moveTo(particles[a].x, particles[a].y);
                                ctx.lineTo(particles[b].x, particles[b].y);
                                ctx.stroke();
                            }
                        }
                    }
                }

                animate();
            }

            // Inicializar cuando el DOM est√© listo
            document.addEventListener("DOMContentLoaded", () => {
                // Inicializar part√≠culas
                initParticles();

                // Inicializar gestor de usuarios
                // Se asigna a window para accesibilidad global (onclicks antiguos)
                // aunque es mejor usar eventos directos, mantenemos compatibilidad
                window.usuarioManager = new UsuarioManager();
            });
        </script>
    </body>
</html>
